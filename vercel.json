{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/canvas/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/api/openai/(.*)",
      "dest": "server/index.js"
    },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
